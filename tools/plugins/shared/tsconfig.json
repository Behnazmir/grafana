{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": false,
    "resolveJsonModule": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "esModuleInterop": true
    },
    "transpileOnly": true
  },
  "extends": "@grafana/tsconfig",

  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "dist",
    "**/dist",
    "**/dist/**",
    "tsconfig.json",
    "**/tsconfig.json"
  ]
}
